<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.movieproject.overview.ViewModel" />
        <variable

            name="movieList"
            type="com.example.movieproject.data.ResultsItem" />

        <variable
            name="movie"
            type="com.example.movieproject.MovieListFragment" />
    </data>
    <!--<androidx.cardview.widget.CardView-->
    <!--    android:layout_width="match_parent"-->
    <!--    android:layout_height="191dp">-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="219dp"
            android:layout_height="197dp"
            android:layout_margin="@android:dimen/app_icon_size"
            android:layout_marginStart="144dp"
            android:layout_marginEnd="192dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="4dp"
                    android:text="More"
                    app:icon="@drawable/ic_baseline_read_more_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/textView"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/textView" />

                <ImageView
                    android:id="@+id/movie_image"
                    android:layout_width="137dp"
                    android:layout_height="143dp"
                    android:layout_marginEnd="8dp"
                    android:adjustViewBounds="true"
                    android:foregroundGravity="right"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    app:imageUrl="@{movieList.posterPath}"
                    app:layout_constraintBottom_toTopOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:src="@tools:sample/backgrounds/scenic" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="134dp"
                    android:layout_height="54dp"
                    android:layout_marginBottom="2dp"
                    android:text="@{movieList.title}"
                    app:layout_constraintBottom_toTopOf="@+id/button"
                    app:layout_constraintEnd_toEndOf="@+id/movie_image"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/movie_image" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!--</androidx.cardview.widget.CardView>-->
</layout>
